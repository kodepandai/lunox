{
  "name": "laranode",
  "version": "0.1.0",
  "description": "NodeJs framework in Laravel flavour",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "dev": "tsc -w & nodemon -q -w dist --es-module-specifier-resolution=node dist/index.js",
    "serve": "node --es-module-specifier-resolution=node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "prettier": "prettier --write --plugin-search-dir=. .",
    "format": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kodepintar/laranode.git"
  },
  "keywords": [
    "laravel",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kodepintar/laranode/issues"
  },
  "homepage": "https://github.com/kodepintar/laranode#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "node-input-validator": "^5.0.0-beta.3",
    "polka": "^1.0.0-next.22"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/node": "^16.11.7",
    "@types/polka": "^0.5.3",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2"
  },
  "type": "module"
}
